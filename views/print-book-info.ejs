<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/book-display.css">
</head>
<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (books.length > 0) { %>
                <% for (let book of books) { %>
                    <div>
                        <h1> <%= book.title %> </h1>
                        <p> <%= book.summary %> </p>
                    </div>
                <% } %>
        <% } else { %>
            <div>
                <h1>No Books found!</h1>
            </div>
        <% } %>
    </main>
    
</body>
</html>